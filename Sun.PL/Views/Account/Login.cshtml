@model LoginVm
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="wrapper">
	<div class="inner">
		<div class="image-holder">
			<img src="~/files/images/registration-form-4.jpg" alt="registration-form" />
		</div>
		<form method="post" asp-action="Login">
			<h3>Sign In</h3>
			<div class="form-holder">
				<input asp-for="Email" placeholder=" Enter Your Email" class="form-control">
			</div>
			<div class="form-holder">
				<input asp-for="Password" placeholder="Enter Your Password" class="form-control" style="font-size: 15px;">
			</div>
			<div class="checkbox">
				<label asp-for="RememberMe">
					<input asp-for="RememberMe" checked> Remember Me
					<span class="checkmark"></span>
				</label>
			</div>
			<div class="form-login">
				<button>Sign In</button>
				<p>Dont Have account? <a asp-controller="Account" asp-action="Register">Register</a></p>
			</div>
		</form>
	</div>
</div>

