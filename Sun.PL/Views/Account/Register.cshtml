@using Sun.PL.ViewModels
@model RegisterVm

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="wrapper">
	<div class="inner">
        <div class="image-holder">
			<img src="~/files/images/registration-form-4.jpg" alt="registration-form" />
		</div>
		<form method="post" asp-action="Register">
			<h3>Sign Up</h3>
			<div class="form-holder active">
				<input asp-for="UserName" placeholder="Enter Your Name" class="form-control">
			</div>
			<div class="form-holder">
				<input asp-for="Email" placeholder=" Enter Your Email" class="form-control">
			</div>
			<div class="form-holder">
				<input asp-for="Password" placeholder="Enter Your Password" class="form-control" style="font-size: 15px;">
			</div>
			<div class="form-holder">
				<input asp-for="ConfirmedPassword" placeholder="Confirm Your Password" class="form-control" style="font-size: 15px;">
			</div>
			<div class="checkbox">
				<label asp-for="Agree">
					<input asp-for="Agree" checked> I agree all statement in <a href="#">Terms & Conditions</a>
					<span class="checkmark"></span>
				</label>
			</div>
			<div class="form-login">
				<button>Sign up</button>
				<p>Already Have account? <a asp-controller="Account" asp-action="Login">Login</a></p>
			</div>
		</form>
	</div>
</div>

