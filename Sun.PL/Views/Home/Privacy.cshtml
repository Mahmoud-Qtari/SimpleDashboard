        <h2 class="header2">Popular Products</h2>
        <div class="row">
            <div id="carouselExampleIndicators" class="carousel slide" data-interval="false">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="slidebutton active" aria-current="true" aria-label="Slide 1"></button>
                    @for(var i = 1; i < products.Count; i++)
                    {
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="slidebutton" aria-label="Slide @(i+1)"></button>
                    }
                </div>
                <div class="carousel-inner">
                    @foreach(var item in products)
                    {
                        <div class="carousel-item product-item active">
                            <img src="~/files/images/product/@item.ImageName" class="d-block w-100" alt="@item.Name">
                            <div class="details d-flex justify-content-between pt-3">
                                <span>@item.Name</span>
                                <span>@item.Price</span>
                            </div>
                        </div>
