@section scripts {
    <script>
        const elements = document.querySelectorAll(".slidebutton");
        const items = document.querySelectorAll(".product-item");

        const Package = document.querySelectorAll(".nav-pacake-button");
        const itemOfPackage = document.querySelectorAll(".show");
        
        Package[0].classList.add("active");
        items.forEach(function (carousel_item) {
            carousel_item.classList.remove("active");
        });
        items[0].classList.add("active");
        elements.forEach(function (button, index) {
        button.addEventListener("click", () => {
                [].forEach.call(elements, function (el) {
                    el.className = el.className.replace("active", "");
                });
                button.classList.add("active");
            items[index].classList.add("active");
            })
        })
        itemOfPackage.forEach(function (item) {
            if (Package[0].getAttribute("id") == item.getAttribute("id")) {
                item.classList.add("active");
            }
        });
        Package.forEach(function (button) {
            button.addEventListener("click", function () {
                itemOfPackage.forEach(function (item) {
                    item.classList.remove("active");
                })
                itemOfPackage.forEach(function (item) {
                    if (button.getAttribute("id") == item.getAttribute("id")) {
                        item.classList.add("active");
                    }
                });

            })
        })
    </script>
