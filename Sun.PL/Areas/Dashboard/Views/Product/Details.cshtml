@model ProductDetailsVm
@section Header {

    <h1>Product Details</h1>
}

<div class="col-md-12">
    <div class="card card-success">
        <div class="card-header">
            <h3 class="card-title">@Model.Name Details</h3>
        </div>
        <div class="card-body">
            <li>Description: @Model.Price</li>
            <br>
            <li>Status: @(Model.IsDeleted ? "Active" : "Deleted")</li>
            <br>
            <li>CreatedAt: @Model.CreatedAt</li>
            <br>
            <li>Image: <img src="~/files/images/product/@Model.ImageName" width="50px" /></li>
        </div>

    </div>
</div>