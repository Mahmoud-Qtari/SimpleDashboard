@model PackageFormVm

@section Header {

    <h1>Package</h1>
}

<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Create</h3>
        </div>


        <form asp-controller="Package" asp-action="Create">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Name">Package Name</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Enter Package Name">
                </div>
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</div>
