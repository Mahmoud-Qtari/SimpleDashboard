@model PackageFormVm

@section Header {
    <h1>Edit Package</h1>
}

<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Update</h3>
        </div>


        <form asp-controller="Package" asp-action="Edit">
            <div class="card-body">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name">Package Name</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Enter Package Name">
                </div>
                <div class="form-group">
                    <label asp-for="IsDeleted"></label>
                    <input asp-for="IsDeleted">
                    <span>@(Model.IsDeleted?"Deleted":"Active")</span>
                </div>
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>