@model IEnumerable<AboutShowVm>
@section Header{
    <h1>Index</h1>
}

@section style{
    <link href="~/lib/datatables/css/datatables.bootstrap4.min.css" rel="stylesheet" />
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">About Us Titles</h3>
        </div>

        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.IsDeleted</td>
                            <td>
                                <a asp-controller="About" asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Details</a>
                                <a asp-controller="About" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                                <a href="javascript:void(0)" data-id="@item.Id" class="btn btn-danger btn-sm delete-btn">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer clearfix">
            <ul class="pagination pagination-sm m-0 float-right">
                <li class="page-item"><a class="page-link" href="#">«</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">»</a></li>
            </ul>
        </div>
    </div>

</div>

@section scripts {
    <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>
    <script src="~/lib/datatables/js/datatables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $("table").DataTable();
        });

        const elements = document.querySelectorAll(".delete-btn");
        elements.forEach(function(button){
            
            button.addEventListener("click",async ()=>{
                
                const confirmed = confirm("Are You Sure?");
                
                if (!confirmed) return;
                 const id = button.dataset.id;

                const response = await fetch(`/Dashboard/About/Delete/${id}`, {
                    method: "POST", 
                    headers: { "Content-Type" : "application/json" }},
                    
                );
                
                const data = await response.json();
                
                 if(response.ok){
                    alert("about deleted sucessfully");
                    $(button).closest("tr").remove();
                 }

            })
        })
    </script>
}
